<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> {% block stylesheets %}{% endblock %}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		<nav class="navbar-expand navbar-dark bg-dark">
			<div class="container">
				<a class="navbar-brand" href="#">Symfony App</a>
					{% if is_granted('ROLE_USER') %}
				<div class="collapse navbar-collapse">
					<ul class="navbar-nav gap-2" >
						<li class="nav-item">
							<a class="nav-link " href="{{ path('categoria_index') }}" >Categorias</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('produto_index') }}" >Produtos</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_logout') }}" >Sair</a>
						</li>
					</ul>

				</div>
				{% endif %}
			</div>
		</nav>
		<div class="container"> 
		{% if is_granted('ROLE_USER') %}
		<span> Usuário: {{ app.user.nome}}</span>
{% endif %}

		{% block body %}{% endblock %}
			</div>
		</body>

	</html>
